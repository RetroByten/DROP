10 REM --- DROP
20 CHRESC$=CHR$(27) ' Define ESC character
30 CHRENT$=CHR$(13) ' Define Enter/Return character
980 GAMESTATE$="TITLE"
990 GOTO 65000 ' Game State Loop

1000 REM GAME
1010 CLS
1020 PRINT "GAME"
1030 KB$=INKEY$
1040 IF KB$=CHRESC$ THEN GAMESTATE$="DEBRIEF":RETURN
1050 GOTO 1030

62000 REM TITLE
62010 CLS
62020 PRINT "DROP: PCJr/BASIC, v1"
62030 PRINT "By: Ryan Paterson"
62040 PRINT ""
62050 PRINT "Press Enter to DROP..."
62060 PRINT "Press ESC to END MISSION..."
62070 KB$=INKEY$ ' Title Input Loop Start
62080 IF KB$=CHRESC$ THEN GAMESTATE$="EXIT":RETURN
62090 IF KB$=CHRENT$ THEN GAMESTATE$="GAME":RETURN
62100 GOTO 62070 ' Title Input Loop End

63000 REM DEBRIEF
63010 CLS
63020 PRINT "DEBRIEF"
63030 PRINT "Press ESC to return to the title screen"
63040 KB$=INKEY$ ' Debrief Loop Start
63050 IF KB$=CHRESC$ THEN GAMESTATE$="TITLE":RETURN
63060 GOTO 63040 ' Debrief Loop End

64000 REM EXIT
64010 CLS
64020 END

65000 REM GAMESTATE ' Gamestate Loop Start
65010 IF GAMESTATE$="GAME" THEN GOSUB 1000
65020 IF GAMESTATE$="TITLE" THEN GOSUB 62000
65030 IF GAMESTATE$="DEBRIEF" THEN GOSUB 63000
65040 IF GAMESTATE$="EXIT" GOTO 64000
65050 GOTO 65000 ' Gamestate Loop End
 
